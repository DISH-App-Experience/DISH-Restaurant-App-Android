<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeController"
    tools:context=".RandomActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="71dp"
                    android:text="Hi, User"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <ImageButton
                    android:id="@+id/profileButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="71dp"
                    android:layout_marginRight="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_image_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck"></ImageButton>

                <View
                    android:id="@+id/eventView"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="22dp" />


                <TextView
                    android:id="@+id/topMenuitemsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:text="Top Menu Items"
                    android:textSize="15dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/eventView"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"></TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>